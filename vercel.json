{
    "buildCommand": "cd frontend && npm install && npm run build",
    "outputDirectory": "frontend/.next",
    "framework": "nextjs",
    "installCommand": "pip install -r requirements.txt && cd frontend && npm install",
    "functions": {
        "backend/api/index.py": {
            "runtime": "python3.9",
            "maxDuration": 60
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/api/index"
        },
        {
            "source": "/docs",
            "destination": "/backend/api/index"
        },
        {
            "source": "/redoc",
            "destination": "/backend/api/index"
        },
        {
            "source": "/openapi.json",
            "destination": "/backend/api/index"
        }
    ],
    "crons": [
        {
            "path": "/api/benchmark/init",
            "schedule": "0,15,30,45 * * * *"
        },
        {
            "path": "/api/benchmark/process",
            "schedule": "* * * * *"
        },
        {
            "path": "/api/pricing/scrape",
            "schedule": "0 0 * * *"
        },
        {
            "path": "/api/sync/models",
            "schedule": "0 2 * * 0"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}
